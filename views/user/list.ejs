<!DOCTYPE html>
<html>
  <head>
    <title>Welcome</title>
      <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
      <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
      <style type="text/css">
          body{
              padding-top:60px;
              padding-bottom:40px;
          }
      </style>
      <script src="/javascripts/bootstrap.js"></script>
      <script src="/javascripts/jquery.min.js"></script>
  </head>
  <body style="text-align: center">
  <%- include ../navbar.ejs %>

    <div id="container" class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>密码</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length){ %>
                    <% data.forEach(function(u){ %>
                    <tr>
                        <td><%=u.name%></td>
                        <td><%=u.password%></td>
                        <td>
                            <a href="update/<%-u._id%>" class="btn btn-success">修改</a>
                            <a href="delete/<%-u._id%>" class="btn btn-danger">删除</a>
                        </td>
                    </tr>
                <% })%>
                <% }else{ %>
                    <tr>
                        <td colspan="3">暂无数据</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <hr/>
        <%- include ../footer.ejs %>
    </div>
  </body>
</html>